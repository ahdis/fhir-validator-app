<% if issues.blank? %>
    <h1>No validation <%= severity %> issues found</h1>
  <% else %>
    <h1>Validation <%= severity.pluralize(issues.count)%>:</h1>
    <ul>
      <% issues.each do |issue| %>
        <li><%= issue.text %> on line <%= issue.line %>. <a href="#error-<%= issue.line%>">Jump to error.</a></li>
      <% end %>
    </ul>
  <% end %>
